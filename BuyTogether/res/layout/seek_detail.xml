<RelativeLayout
    android:layout_width="fill_parent"
    android:background="@drawable/bg2"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <TextView
        android:id="@+id/seek_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="52dp"
        android:text="徵求者代號" />

    <TextView
        android:id="@+id/seek_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/seek_account"
        android:layout_below="@+id/seek_account"
        android:layout_marginTop="40dp"
        android:text="評價" />

    <TextView
        android:id="@+id/seek_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/seek_score"
        android:layout_below="@+id/seek_score"
        android:layout_marginTop="40dp"
        android:text="商品分類" />

    <TextView
        android:id="@+id/seek_dateline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/seek_type"
        android:layout_below="@+id/seek_type"
        android:layout_marginTop="40dp"
        android:text="截止日期" />

    <TextView
        android:id="@+id/seek_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/seek_account"
        android:layout_marginLeft="69dp"
        android:layout_toRightOf="@+id/seek_account"
        android:text="商品名稱" />

    <TextView
        android:id="@+id/seek_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/seek_score"
        android:layout_alignBottom="@+id/seek_score"
        android:layout_alignRight="@+id/seek_name"
        android:text="商品介紹" />

    <TextView
        android:id="@+id/seek_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/seek_type"
        android:layout_alignBottom="@+id/seek_type"
        android:layout_alignLeft="@+id/seek_intro"
        android:text="批價說明及付款方式" />

    <TextView
        android:id="@+id/seek_limit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/seek_dateline"
        android:layout_alignBottom="@+id/seek_dateline"
        android:layout_alignLeft="@+id/seek_pay"
        android:text="跟團限制" />

    <TextView
        android:id="@+id/seek_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/seek_limit"
        android:layout_below="@+id/seek_limit"
        android:layout_marginTop="47dp"
        android:text="備註" />

    <Button
        android:id="@+id/seek_ok"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/seek_note"
        android:text="認領" />

</RelativeLayout>
